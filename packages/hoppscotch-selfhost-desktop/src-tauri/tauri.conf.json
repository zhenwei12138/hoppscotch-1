{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:3000",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Hoppscotch",
    "version": "24.6.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "os": {
        "all": true
      },
      "fs": {
        "writeFile": true
      },
      "dialog": {
        "save": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://*", "https://*", "wss://*"]
      },
      "window": {
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "io.hoppscotch.desktop",
      "targets": "all"
    },
    "security": {
      "csp": "none"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Hoppscotch",
        "width": 800,
        "height": 600,
        "fileDropEnabled": false
      }
    ]
  }
}
